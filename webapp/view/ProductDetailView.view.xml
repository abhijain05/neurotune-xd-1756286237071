<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="converted.productdetailview.controller.ProductDetailView"
	displayBlock="true"
          xmlns:commons="sap.ui.commons">
	<Page title="Product Detail" enableScrolling="true">
		<content>
			<Title text="Product Detail" />
			<Image src="{products>/product/images}" width="300" height="200" />
			<Table id="specificationsTable" items="{products>/product/specifications}">
				<columns>
					<Column>
						<header>
							<Text text="Specification" />
						</header>
					</Column>
					<Column>
						<header>
							<Text text="Value" />
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="Processor" />
							<Text text="{processor}" />
						</cells>
					</ColumnListItem>
					<ColumnListItem>
						<cells>
							<Text text="Memory" />
							<Text text="{memory}" />
						</cells>
					</ColumnListItem>
					<!-- Add more rows as needed -->
				</items>
			</Table>

			<form:SimpleForm id="pricingForm" editable="false">
				<form:content>
					<form:FormElement label="Price">
						<Text text="{products>/product/price}" />
					</form:FormElement>
					<form:FormElement label="Currency">
						<Text text="{products>/product/currency}" />
					</form:FormElement>
				</form:content>
			</form:SimpleForm>
			<form:SimpleForm id="inventoryForm" editable="false">
				<form:content>
					<form:FormElement label="Inventory Status">
						<Text text="{products>/product/inventoryStatus}" />
					</form:FormElement>
				</form:content>
			</form:SimpleForm>

			<Text id="customerReviews" text="Customer Reviews: {products>/product/customerReviews}" />
			<Table id="relatedProductsTable" items="{products>/product/relatedProducts}">
				<columns>
					<Column>
						<header>
							<Text text="Product Name" />
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{name}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>